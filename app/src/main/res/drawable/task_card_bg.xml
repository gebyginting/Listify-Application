<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Transparan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparan -->
        </shape>
    </item>

    <!-- Border kiri -->
    <item android:gravity="left">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Warna border -->
            <size android:width="2dp"/> <!-- Ketebalan border kiri -->
        </shape>
    </item>

</layer-list>
