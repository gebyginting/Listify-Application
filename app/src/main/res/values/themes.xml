<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ListifyApplication" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Warna utama -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowBackground">@color/white</item>
        <!-- Font default untuk seluruh aplikasi -->
        <item name="android:fontFamily">@font/outfit_regular</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="custom_button" >
        <item name="android:paddingLeft">33dp</item>
        <item name="android:paddingRight">33dp</item>
        <item name="android:insetLeft">20dp</item>
    </style>

    <style name="create_task_title">
        <item name="fontFamily">@font/outfit_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.ListifyApplication" parent="Base.Theme.ListifyApplication" />

</resources>